{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "es2020",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "useDefineForClassFields": false
  }
}
